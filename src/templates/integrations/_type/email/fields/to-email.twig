{% import "form-builder/_includes/_components" as components %}

{% set nameEmail = 'integrations[email]['~ index ~'][toEmail]' %}

{% set container = {
    title: 'To Email' |t,
    info: null,
    icon: null,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'text',
        name: nameEmail,
        value: attribute(form.integrations.email, index).toEmail is defined and attribute(form.integrations.email, index).toEmail != '' ? attribute(form.integrations.email, index).toEmail : '',
        class: 'hidden',
        id: null,
        hint: 'EMAIL'
    },
} %}

{% set modal = {
    title: 'To Email' |t,
    instructions: 'The recipientâ€™s email address' |t,
    successMessage: 'To Email Updated' |t,
    inputs: inputs
} %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}