{% import "form-builder/_includes/_components" as components %}

{% set container = {
    title: 'Input Templates' |t,
    info: 'Global template path for inputs.' |t,
    icon: null,
    toggle: false,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'text',
        name: 'settings[fields][globalInputTemplatePath]',
        value: form.settings.fields.globalInputTemplatePath is defined ? form.settings.fields.globalInputTemplatePath : '',
        class: 'hidden',
        id: null,
        hint: 'PATH',
        required: false
    }
} %}

{% set modal = {
    title: 'Input Templates' |t,
    instructions: 'Global template path for inputs.' |t,
    successMessage: 'Global Input Template Path Updated' |t,
    inputs: inputs
} %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}