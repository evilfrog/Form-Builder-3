{% extends "_layouts/cp" %}

{% set bodyClass = 'formbuilder fb-edit-form' %}
{% set pluginCpUrl = url('form-builder') %}
{% set selectedSubnavItem = "forms" %}

{% set docLinks = {
    'formSettings': 'https://google.com/', 
    'formDatabase': 'https://yahoo.com/', 
    'formOptions': 'https://bing.com/',
    'formSpamProtection': 'https://bing.com/'
} %}

{% set groups = craft.fb.getAllGroups() %}
{% if not groups %}
    {% exit 404 %}
{% endif %}

{% set groupId = craft.app.request.getQueryParam('groupId') %}
{% set statusId = form.statusId is defined ? form.statusId  %}

{% if not groupId %}
    {% if form.id %}
        {% set groupId = form.groupId %}
    {% else %}
        {% set groupId = groups[0].id %}
    {% endif %}
{% endif %}

{% set details = true %}

{% block header %}
    {% include 'form-builder/_includes/_header' ignore missing with { title: title } %}
{% endblock %}

{% block main %}
    <div id="content-container">

        <input type="hidden" name="action" value="form-builder/forms/save">
        {{ redirectInput('form-builder/forms/group/{groupId}') }}

        {% if form.id %}
            <input type="hidden" name="formId" value="{{ form.id }}">
            <input type="hidden" name="fieldLayoutId" value="{{ form.fieldLayoutId }}">
        {% endif %}

        {% set availableFields = form.fieldLayoutId is defined and form.fieldLayoutId ? form.getFieldLayout().getFields() : null %}

        {% set fieldsOption = [] %}
        {% set fieldsOption = [{label: 'Select Field', value: ''}] %}
        {% for field in availableFields %}
            {% set type = field |getClass(field) %}
             {% if type == 'PlainText' or type == 'Email' %}
                {% set fieldsOption = fieldsOption|merge([{ label: field.name, value: field.handle }]) %}
             {% endif %}
        {% endfor %}

        {% set errors = form.getErrors() %}

        {% set tabs = [
            {
                tabId: 0,
                class: 'tab',
                label: 'Fields',
                url: '#tab-fields'
            },
            {
                tabId: 1,
                class: 'tab',
                label: 'Settings',
                url: '#tab-fields-settings'
            }
        ] %}


        <div id="content">
            {% include 'form-builder/forms/_includes/fields/fields' ignore missing %}

            {#{% hook 'formBuilderNotificationsHtml' %}#}

            {# Craft::$app->view->hook('formBuilderNotificationsHtml', function(&$context) {
                $context['foo'] = 'bar';
                return 'Hey!';
            }); #}

            <section class="integrations">
                <header>
                    <h2>{{ "Integrations"|t('form-builder') }}</h2>
                    <p>{{ "Send notifications or save submission to 3rd party services."|t('form-builder') }}</p>
                </header>

                <div class="integration-body">
                    {% if craft.app.plugins.isPluginInstalled('formbuilder-integrations') %}
                        {% set types = craft.fbi.types.getAvailableTypes() %}
                        {# #}
                        {# #}
                        {# TODO: ADD BACK ELEMENT SELECT MODAL FOR INTEGRATIONS!! YO ?! #}
                        {# #}
                        {# #}
                        <div class="integrate-options">
                            {% for type in types %}
                                <div class="list integrations-list">
                                    {% for type in types %}
                                        <div class="item">
                                            <div class="item-meta">
                                                <div class="item-meta-icon">{% include 'formbuilder-integrations/_includes/icons/integrations-' ~ type.handle ignore missing %}</div>
                                            </div>
                                            <div class="item-info">
                                                <div class="item-meta-title">{{ type.title }}</div>
                                                <a href="#" class="btns btn-small btn-info integrate-item-btn" data-element="owldesign\formbuilderintegrations\elements\{{ type.title }}" data-type="{{ type.handle }}" data-form="{{ form |json_encode() }}"><span><i class="fas fa-plus"></i></span></a>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>

                                {#<a class="integrate-item-btn btns btn-info add-{{ type.handle }}-integrations" data-type="{{ type.handle }}" data-form="{{ form |json_encode() }}">#}
                                    {#<i class="fas fa-plus"></i>#}
                                    {#<span>{{ type.title }}</span>#}
                                {#</a>#}
                            {% endfor %}
                        </div>

                        <div id="formbuilder-integrations-container" class="elements">
                            {% set integrations = form.integrations is defined ? form.integrations %}
                            {% for typeHandle, integration in integrations %}
                                {% set type = craft.fbi.types.getTypeByHandle(typeHandle) %}

                                {% for index, element in integration %}
                                    {% set integration = craft.fbi.integrations.getIntegrationById(element.elementId) %}
                                    {% include 'formbuilder-integrations/integrations/' ~ type.handle ~ '/_integration' ignore missing with { integration: integration, type: type, index: index} %}
                                {% endfor %}
                            {% endfor %}
                        </div>
                    {% else %}
                        {# TODO: stylize this a little nicer #}
                        <a class="btns btn-info">
                            <i class="fas fa-download"></i>
                            <span>{{ "Install Integrations Plugin"|t('form-builder') }}</span>
                        </a>
                    {% endif %}
                </div>
            </section>

        </div>
    </div>

    <div id="details">
        <div id="settings">
            <section class="form-settings-tout cmp-tout theme-white">
                <header>
                    <span class="tout-title">{{ "Settings" |t('form-builder') }}</span>
                    <a href="{{ docLinks['formSettings'] }}" class="docs-link" target="_blank"><i class="fas fa-info"></i></a>
                </header>
                <div class="body">
                    {% include 'form-builder/forms/_includes/settings/basic-settings' ignore missing %}
                </div>
            </section>

            <section class="form-options-tout cmp-tout theme-white">
                <header>
                    <span class="tout-title">{{ "Database" |t('form-builder') }}</span>
                    <a href="{{ docLinks['formDatabase'] }}" class="docs-link" target="_blank"><i class="fas fa-info"></i></a>
                </header>
                <div class="body">
                    {% include 'form-builder/forms/_includes/settings/save-entries' ignore missing %}
                </div>
            </section>

            <section class="form-options-tout cmp-tout theme-white">
                <header>
                    <span class="tout-title">{{ "Options" |t('form-builder') }}</span>
                    <a href="{{ docLinks['formOptions'] }}" class="docs-link" target="_blank"><i class="fas fa-info"></i></a>
                </header>
                <div class="body">
                    {% include 'form-builder/forms/_includes/options/submit-button' ignore missing %}
                    {% include 'form-builder/forms/_includes/options/redirect' ignore missing %}
                    {% include 'form-builder/forms/_includes/options/messages' ignore missing %}
                    {# {% include 'form-builder/forms/_includes/options/ajax' ignore missing %} #}
                    {# {% include 'form-builder/forms/_includes/options/terms-conditions' ignore missing %} #}
                </div>
            </section>

            <section class="spam-protection-tout cmp-tout theme-white">
                <header>
                    <span class="tout-title">{{ "Spam Protection" |t('form-builder') }}</span>
                    <a href="{{ docLinks['formSpamProtection'] }}" class="docs-link" target="_blank"><i class="fas fa-info"></i></a>
                </header>
                <div class="body">
                    {% include 'form-builder/forms/_includes/spam/honeypot' ignore missing %}
                    {% include 'form-builder/forms/_includes/spam/timed' ignore missing %}
                </div>
            </section>

            <div class="pane meta save-form-meta last">
                <button type="submit" href="#" class="btns btn-info save-form">{{ "Save Form" |t('form-builder') }}<span class="btn-hint">&#8984; + S</span></button>
            </div>

            {% if formId is defined %}
                <div class="pane meta delete-form-meta last">
                    <a href="#" class="btns btn-danger delete-form" data-id="{{ form.id }}">{{ "Delete Form" |t('form-builder') }}</a>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% js %}
    {% if form and not form.handle %}new Craft.HandleGenerator('#formName', '#formHandle');{% endif %}
{% endjs %}
